<div class="col-md-6 col-centered">
<div class="panel panel-warning">
    <div class="panel-heading">
      <h2>新增任务</h2>
    </div>
    <div class="panel-body">
      <%= simple_form_for [:admin,@task] do |f| %>
        <div class="form-task">
          <%= f.input :title, input_html: { class: "form-control"} %>
          <%= f.input :description, input_html: { class: "form-control"} %>
          <%= f.input :unacommpolished, input_html: { class: "form-control"} %>
          <%= f.input :buckle, input_html: { class: "form-control"} %>
          <%= f.input :deduction, input_html: { class: "form-control"} %>
          <%= f.input :score, input_html: { class: "form-control"} %>
        </div>
        <%= f.submit "Submit", class: "btn btn-danger", data: { disable_with: "Submiting..." } %>
      <% end %>
    </div>
  </div>
</div>
