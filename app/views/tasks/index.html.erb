<div class="col-md-12">
  <div class="task">
    <%= link_to("New task", new_task_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>执行人</td>
        <td>创建人 </td>
        <td>任务</td>
        <td>未达成</td>
        <td>扣除</td>
        <td>抵扣</td>
        <td>得分</td>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to(task.title, task_path(task)) %></td>
          <td> <%= task.user.email %> </td>
          <td><%= task.description %></td>
          <td><%= task.unacommpolished %></td>
          <td><%= task.buckle %></td>
          <td><%= task.deduction %></td>
          <td><%= task.score %></td>
          <td>
              <% if current_user && current_user == task.user %>
              <%= link_to("Edit", edit_task_path(task), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", task_path(task),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
