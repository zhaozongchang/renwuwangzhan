<div class="col-md-12">

  <h2 class="text-center"> 我的全部任务 </h2>

  <table class="table">
    <thead>
      <tr>

        <th>发表时间</th>
        <td>任务</td>
        <td>未达成</td>
        <td>扣除</td>
        <td>抵扣</td>
        <td>得分</td>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          
          <td><%= task.created_at %></td>
          <td><%= task.description %></td>
          <td><%= task.unacommpolished %></td>
          <td><%= task.buckle %></td>
          <td><%= task.deduction %></td>
          <td><%= task.score %></td>
          <td>
          <%= link_to("Edit", edit_account_task_path(task), class: "btn btn-default btn-xs")%>
          <%= link_to("Delete", account_task_path(task),    class: "btn btn-default btn-xs",
                      method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
