
<div class="col-md-10 col-contered">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>我的全部任务</h3>
    </div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <td>任务</td>
            <td>未达成</td>
            <th>发表时间</th>
            <td>得分</td>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= simple_format(link_to(task.description,account_task_path(task))) %></td>
              <td><%= simple_format(task.unacommpolished) %></td>
              <td><%= task.created_at %></td>
              <td><%= task.score %></td>
              <td>
              <%= link_to("Edit", edit_account_task_path(task), class: "btn btn-sm label label-info")%>
              <%= link_to("Delete", account_task_path(task),    class: "btn btn-sm label label-warning",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>

      <div style="margin-left:auto;margin-right:20px;width:125px;background-color:Aqua;">


            <p>
             <span class="pull-right">
                  <span>
                     <% sum = 0 %>
                     <% @tasks.each do |task| %>
                     <% %>
                     <% sum = sum + task.score %>
                     <% end %>
                     <h4>得分总计 <%= sum %> 分</h4>
                  </span>
               </span>
              </p>
         </div>


      <div class="text-center">
          <%= will_paginate @tasks %>
      </div>
    </div>
  </div>
</div>
