
<div class="col-md-10 col-centered">
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3>未完成的任务</h3>
    </div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>创建人</th>
            <th>发表时间</th>
            <td>未达成</td>

            <td>得分</td>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td> <%= task.user.email %> </td>

              <td><%= task.created_at %></td>
              <td><%= task.unacommpolished %></td>

              <td><%= task.score %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
          <%= will_paginate @tasks %>
        </div>
    </div>
  </div>
</div>
